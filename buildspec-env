# AWS CodeBuildで利用する環境変数を定義する
# 
# - 本ファイルはbuildspec.yml、prod.buildspec.yml以外から呼ばれることを想定していない
# - CodeBuildでCloudFormation出力を手軽に環境変数にセットできないので、
#   本ファイルにそれらの処理を切り出した
# - 本スクリプトとCodeBuildで同じ環境変数が定義されている場合、後者を優先する

STACK_NAME="${SERVICE}-${STAGE}"
STACK_FILE=".tmp-api-stack"

aws cloudformation describe-stacks --stack-name "${STACK_NAME}" > "${STACK_FILE}"

if [ -z "${REST_API_URL}" ]; then
  REST_API_URL_QUERY='.Stacks[] | .Outputs[] | select(.OutputKey == "HttpApiUrl") | .OutputValue'
  REST_API_URL=`jq -r "${REST_API_URL_QUERY}" "${STACK_FILE}"`
fi

if [ -z "${WEBSOCKET_API_URL}" ]; then
  WEBSOCKET_API_URL_QUERY='.Stacks[] | .Outputs[] | select(.OutputKey == "ServiceEndpointWebsocket") | .OutputValue'
  WEBSOCKET_API_URL=`jq -r "${WEBSOCKET_API_URL_QUERY}" "${STACK_FILE}"`
fi

rm "${STACK_FILE}"