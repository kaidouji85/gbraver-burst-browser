<div class="{{ROOT_CLASS}}__episode-detail">
  <div
    class="{{ROOT_CLASS}}__episode-title"
    data-id="{{ids.episodeTitle}}"
  ></div>
  <img
    class="{{ROOT_CLASS}}__episode-image-cut"
    src=""
    alt="エピソードのイメージカット"
    data-id="{{ids.episodeImageCut}}"
  />
  <div
    class="{{ROOT_CLASS}}__episode-introduction"
    data-id="{{ids.episodeIntroduction}}"
  ></div>
</div>
<div class="{{ROOT_CLASS}}__selector">
  <div class="{{ROOT_CLASS}}__episode-type-tabs">
    <div class="{{ROOT_CLASS}}__episode-type--selected">メイン</div>
    <div class="{{ROOT_CLASS}}__episode-type">サイド</div>
  </div>
  <div class="{{ROOT_CLASS}}__episodes" data-id="{{ids.episodes}}"></div>
</div>
<div class="{{ROOT_CLASS}}__controllers">
  <button
    class="{{ROOT_CLASS}}__prev"
    data-id="{{ids.prevButton}}"
  >戻る</button>
  <button
    class="{{ROOT_CLASS}}__play-episode"
    data-id="{{ids.playButton}}"
  >このエピソードをプレイ</button>
</div>