<div class="{{ROOT}}__background" data-id="back-ground"></div>
<div class="{{ROOT}}__dialog">
  <img
    class="{{ROOT}}__closer"
    alt="閉じる"
    src="{{closerPath}}"
    data-id="closer"
  />
  <div class="{{ROOT}}__enemy-state">
    <div class="{{DAMAGE}}" data-id="enemy-damage"></div>
    <div
      class="{{BATTLE_RESULT_NAME}}"
      data-id="enemy-battle-result-name"
    ></div>
    <div class="{{ROOT}}__hp-label">HP</div>
    <div class="{{ROOT}}__hp-value">{{enemy.armdozer.hp}}</div>
    <div class="{{ROOT}}__state-separator-1"></div>
    <img
      class="{{ROOT}}__battery-icon"
      alt="バッテリーアイコン"
      src="{{batteryIconPath}}"
    />
    <div class="{{ROOT}}__battery">{{enemy.armdozer.battery}}</div>
    <div class="{{ROOT}}__power-label">攻撃</div>
    <div class="{{ROOT}}__power-value">{{enemyPower}}</div>
    <div class="{{ROOT}}__state-separator-2"></div>
    <div class="{{ROOR}}__speed-label">機動</div>
    <div class="{{ROOR}}__speed-value">{{enemy.armdozer.speed}}</div>
  </div>
  <div class="{{ROOT}}__enemy">
    <img
      class="{{ROOT}}__enemy-armdozer"
      alt="敵のアームドーザ"
      src="{{enemyArmdozerPath}}"
    />
    <span
      class="{{ROOT}}__enemy-battery-value"
      data-id="enemy-battery-value"
    ></span>
    <span
      class="{{ROOT}}__enemy-battery-correct"
      data-id="enemy-battery-correct"
    ></span>
  </div>
  <div class="{{ROOT}}__middle">
    <img
      class="{{turnIndicatorClass}}"
      alt="ターンインジケーター"
      src="{{turnIndicatorPath}}"
    />
  </div>
  <div class="{{ROOT}}__player-state">
    <div class="{{DAMAGE}}" data-id="player-damage"></div>
    <div
      class="{{BATTLE_RESULT_NAME}}"
      data-id="player-battle-result-name"
    ></div>
    <div class="{{ROOT}}__hp-label">HP</div>
    <div class="{{ROOT}}__hp-value">{{player.armdozer.hp}}</div>
    <div class="{{ROOT}}__state-separator-1"></div>
    <img
      class="{{ROOT}}__battery-icon"
      alt="バッテリーアイコン"
      src="{{batteryIconPath}}"
    />
    <div class="{{ROOT}}__battery">{{player.armdozer.battery}}</div>
    <div class="{{ROOT}}__power-label">攻撃</div>
    <div class="{{ROOT}}__power-value">{{playerPower}}</div>
    <div class="{{ROOT}}__state-separator-2"></div>
    <div class="{{ROOR}}__speed-label">機動</div>
    <div class="{{ROOR}}__speed-value">{{player.armdozer.speed}}</div>
  </div>
  <div class="{{ROOT}}__player">
    <img
      class="{{ROOT}}__player-armdozer"
      alt="プレイヤーのアームドーザ"
      src="{{playerArmdozerPath}}"
    />
    <span
      class="{{ROOT}}__player-battery-value"
      data-id="player-battery-value"
    ></span>
    <span
      class="{{ROOT}}__player-battery-correct"
      data-id="player-battery-correct"
    ></span>
  </div>
  <div class="{{ROOT}}__enemy-controller">
    <button
      class="{{ROOT}}__enemy-battery-minus"
      data-id="enemy-battery-minus"
    >-
    </button>
    <button class="{{ROOT}}__enemy-battery-plus" data-id="enemy-battery-plus">+
    </button>
  </div>
  <div class="{{ROOT}}__player-controller">
    <button
      class="{{ROOT}}__player-battery-minus"
      data-id="player-battery-minus"
    >-
    </button>
    <button
      class="{{ROOT}}__player-battery-plus"
      data-id="player-battery-plus"
    >+
    </button>
  </div>
</div>