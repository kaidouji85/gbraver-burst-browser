<div class="{{ROOT}}__background"></div>
<div class="{{ROOT}}__dialog">
  <img
    class="{{ROOT}}__closer"
    alt="閉じる"
    src="{{closerPath}}"
    data-id="{{ids.closer}}"
  />
  <div class="{{ROOT}}__enemy">
    <img class="{{ROOT}}__enemy-armdozer" src="{{enemyArmdozerPath}}">
  </div>
  <img class="{{ROOT}}__turn-indicator" src="{{turnIndicatorPath}}">
  <div class="{{ROOT}}__player">
    <img class="{{ROOT}}__player-armdozer" src="{{playerArmdozerPath}}">
  </div>
  <div class="{{ROOT}}__enemy-battery">
    <button class="{{ROOT}}__enemy-battery-minus">-</button>
    <button class="{{ROOT}}__enemy-battery-plus">+</button>
  </div>
  <div class="{{ROOT}}__player-battery">
    <button class="{{ROOT}}__player-battery-minus">-</button>
    <button class="{{ROOT}}__player-battery-plus">+</button>
  </div>
</div>